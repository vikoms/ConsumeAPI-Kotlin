<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="305dp"
    android:layout_height="400dp"
    android:layout_gravity="center"
    android:background="@android:color/white"
    tools:context=".ui.managetutorial.TutorialAddUpdateActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/helveticaneue_medium"
        android:text="Add / Update Tutorial"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/edt_title_tutorial"
        style="@style/editTextCustom"
        android:hint="Title ...."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/helveticaneue_medium"
        android:text="@string/text_title"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView7"
        style="@style/textTitleForm"
        android:text="@string/text_body"
        app:layout_constraintEnd_toEndOf="@+id/edt_title_tutorial"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_title_tutorial"
        app:layout_constraintTop_toBottomOf="@+id/edt_title_tutorial" />


    <EditText
        android:id="@+id/edt_body_tutorial"
        style="@style/editTextCustom"
        android:layout_height="120dp"
        android:hint="Body ..."
        app:layout_constraintEnd_toEndOf="@+id/edt_title_tutorial"
        app:layout_constraintStart_toStartOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="150dp"
        android:layout_height="35dp"
        android:layout_marginTop="24dp"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:fontFamily="@font/helveticaneue_medium"
        android:background="@drawable/bg_button_login"
        app:layout_constraintEnd_toEndOf="@+id/edt_body_tutorial"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/edt_body_tutorial"
        app:layout_constraintTop_toBottomOf="@+id/edt_body_tutorial" />

    <ProgressBar
        android:id="@+id/pg_new_tutorial"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>